{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid col-md-8 text-center">
    <h2 class="text text-success mb-4">Teacher List</h2>
    <a class="btn btn-primary mb-3" href="{{ path('add_teacher')}}">ADD TEACHER</a>
    <table class="table table-info table-hover mt-5">
        <tr>
            <th>ID</th>
            <th>Teacher Name</th>
            <th>Teacher Phone</th>
            <th>Teacher Email</th>
            <th>Teacher Image</th>
            <th>Actions</th>
        </tr>
        {% for teacher in teachers %}
            <tr>
                <td>{{ teacher.id }}</td>
                <td>{{ teacher.name }}</td>
                <td>{{ teacher.phone }}</td>
                <td>{{ teacher.email }}</td>
                <td>
                    <a href="{{ path('teacher_detail', {'id' : teacher.id })}}  ">
                        <img src="{{ teacher.image }}" width=100 height=100>
                    </a>  
                    
                </td>
                <td>
                    <a class="btn btn-warning" href="{{ path('edit_teacher', {'id' : teacher.id })}}">EDIT</a>
                    <a class="btn btn-danger"
                    onclick="return confirm('Do you want to delete this teacher?');" href="{{ path('delete_teacher', {'id' : teacher.id })}}"
                    >DELETE</a>
                </td>
            </tr>
        {% endfor %}
    </table>
</div>
{% endblock %