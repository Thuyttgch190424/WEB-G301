{% extends "base.html.twig" %}

{% block body %}
	<div class="container col-md-8 text-center">
		<h2 class="text-success mb-3">Teacher Name:
			{{ teacher.name }}
		</h2>
		<div class="row">
			<div class="col">
				<img src="{{ teacher.image }}" width="200" height="200">
			</div>
			<div class="col">
				<h5 class="text-info">Teacher ID:
					{{ teacher.teacherId }}</h5>
				<h5 class="text-warning">Email:
					{{ teacher.email }}</h5>
				<h5 class="text-danger">Phone:
					{{ teacher.phone }}</h5>
				<h5 class="text-monospace">Birthday:
					{{ teacher.birthday | date('d/m/Y') }}</h5>
				<h5 class="text-monospace">Course:
					{% if teacher.courses != null %}
						<a class="text text-success text-decoration-none" href="{{ path('student_detail', {'id' : grade.id })}}">
							{{ teacher.courses.name }}
						</a>
					{% endif %}
				</h5>

			</div>
		</div>
	</div>
{% endblock %}
